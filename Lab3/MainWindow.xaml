                    <RowDefinition Height="90*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="dgOrderInfo" HorizontalAlignment="Left" Height="329" Margin="10,10,0,0" VerticalAlignment="Top" Width="766" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                <Button x:Name="btnQueryEx3" Content="OrderInfo" HorizontalAlignment="Left" Height="26" Margin="637,316,0,0" VerticalAlignment="Top" Width="108" Click="btnOrderInfo" Grid.Column="1" Grid.Row="1"/>
            </Grid>
        </TabItem>
        <TabItem Name="Ex4" Header="Ex4" Width="50">
